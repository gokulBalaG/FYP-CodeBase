<%- include('partials/header') %>

<title>Smart Agricare | Home</title>
</head>
<body>

<h1 class="header-home">Home</h1>

<div class="main">

    <div class="current-stats">
        <a href="/weather-forecast" class="current-details-link">Weather forecast</a>
    
        <a href="/view-land" class="current-details-link">View land status</a>
        
        <a href="/hardware-stat" class="current-details-link">Hardware status</a>
    
        <a href="/crop-details" class="current-details-link">Crop Details</a>
    </div>

    <% homeProducts.forEach((product, i) => { %>

    <% if (i % 2 === 0) { %>
        <div class="product-div product-div-left">
    <% } else { %>
        <div class="product-div product-div-right">
        <% } %>
        <h1 class="product-title" routeName="<%= product.routeName %>">
            <%= product.title %> 
        </h1>
        <p class="product-desc">
            <%= product.description %> 
        </p>
    </div>
    <% }); %>

</div>

<%- include('partials/footer') %>
