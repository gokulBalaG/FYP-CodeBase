<%- include('partials/header') %>

<link rel="stylesheet" href="/css/login-register.css" />

<title>Smart Agricare | Register</title>
</head>
<body>

<div class="container mt-5 register-section">
  <h1>Register</h1>
  <div class="row">

    <div class="col-sm-6 form">
      <div class="card">
        <div class="card-body">

          <form action="/register" method="POST" class="register-form">
            
            <div class="form-group form-field">
              <label for="email">Email</label>
              <input type="email" 
              class="form-control username" 
              name="username" 
              placeholder="example@email.com"
              title="Please enter a valid email id"
              required >
            </div>

            <div class="form-group form-field error hidden">
              <p class="error-text">
                An account with this email already exists!
              </p>
            </div>
          
            <div class="form-group form-field">
              <label for="name">Name</label>
              <input type="text" 
              class="form-control" 
              name="name" 
              placeholder="Name"
              minlength="5"
              pattern="[a-zA-Z][a-zA-Z0-9-_]{5,25}"
              title="Please enter a valid name (minimum 5 characters)"
              required >
            </div>

            <div class="form-group form-field">
              <label for="password">Password</label>
              <input type="password" 
              class="form-control password" 
              name="password" 
              placeholder="Password (minimum <%= pwMinLen %> characters)"
              minlength="<%= pwMinLen %>"
              title="Please enter a minimum of <%= pwMinLen %> characters"
              required >
            </div>
            
            <div class="form-group form-field">
              <label for="phone">Phone number</label>
              <input type="text" 
              class="form-control phone" 
              name="phone" 
              placeholder="Phone number"
              minlength="10"
              pattern="[6789][0-9]{9}"
              title="Please enter a valid phone number"
              required >
            </div>

            <button type="submit" class="btn btn-dark btn-register">Register</button>

            <p class="form-btn-separator-text-p">or</p>

            <a href="/login">
              <button type="button" class="btn btn-dark">Login</button>
            </a>

          </form>

        </div>
      </div>
    </div>

    <div class="col-sm-6 tagline-div">
      <h2 class="tagline">
        Gateway to simplified agriculture
      </h2>
    </div>

  </div>
</div>

<%- include('partials/footer') %>

<script src="/js/register.js"></script>

</body>
</html>