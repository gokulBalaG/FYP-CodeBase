<%- include('partials/header') %>

<link rel="stylesheet" href="/css/login-register.css" />

<title>Smart Agricare | Login</title>
</head>
<body>

<div class="container mt-5 login-section">
  <h1>Login</h1>
  <div class="row">

    <div class="col-sm-6 form">
      <div class="card">
        <div class="card-body">

          <form action="/login" method="POST" class="login-form">
            
            <div class="form-group form-field">
              <label for="email">Email</label>
              <input type="email" 
              class="form-control username" 
              name="username" 
              placeholder="example@email.com" 
              required>
            </div>

            <div class="form-group form-field">
              <label for="password">Password</label>
              <input type="password" 
              class="form-control password" 
              name="password" 
              placeholder="Password" 
              minlength="<%= pwMinLen %>"
              required >
            </div>

            <button type="submit" class="btn btn-dark btn-login">Login</button>

            <p class="form-btn-separator-text-p">or</p>

            <a href="/register">
              <button type="button" class="btn btn-dark">Signup</button>
            </a>

          </form>

        </div>
      </div>
    </div>

    <div class="col-sm-6 tagline-div">
      <h2 class="tagline">
        Gateway to simplified agriculture
      </h2>
    </div>

  </div>
</div>

<%- include('partials/footer') %>

</body>
</html>